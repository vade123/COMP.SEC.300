{
  "extends": "@tsconfig/node17/tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["./typings", "./node_modules/@types/"]
  },
  "include": ["./src", "./typings"],
  "ts-node": {
    "transpileOnly": true
  }
}
